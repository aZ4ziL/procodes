    <script>
        var log = document.getElementById("chat-logs");
        document.getElementById("chat-message-input").focus();

        function appendLog(item) {
            var doScroll = log.scrollTop > log.scrollHeight - log.clientHeight - 1;
            log.appendChild(item);
            if (doScroll) {
                log.scrollTop = log.scrollHeight - log.clientHeight;
            }
        }

        function isUser(username1, username2) {
            if (username1 == username2) {
                return true
            } else {
                return false
            }
        }

        // Websocket
        const ws = new WebSocket(
            "ws://" + window.location.host +
            "/ws/" + "{{ .group.Title }}"
        );

        ws.onopen = function () {
            console.log("Connecting to websocket.");
        }

        ws.onmessage = function (response) {
            console.log(data);
            var data = JSON.parse(response.data);
            var username = data.from;
            var message = data.text;

            if (isUser(username, "{{ .user.Username }}")) {
                // alert("Hello");
                var card = document.createElement("div");
                card.classList.add("card", "right");

                var body = document.createElement("div");
                body.classList.add("card-body");

                var h5 = document.createElement("h5");
                h5.classList.add("card-title");
                h5.innerText = "You";

                var p = document.createElement("p");
                p.classList.add("p");
                p.innerText = message;

                body.appendChild(h5);
                body.appendChild(p);
                card.appendChild(body);

                appendLog(card);
            } else {
                // alert("Hello");
                var card = document.createElement("div");
                card.classList.add("card", "left");

                var body = document.createElement("div");
                body.classList.add("card-body");

                var h5 = document.createElement("h5");
                h5.classList.add("card-title");
                h5.innerText = username;

                var p = document.createElement("p");
                p.classList.add("p");
                p.innerText = message;

                body.appendChild(h5);
                body.appendChild(p);
                card.appendChild(body);

                appendLog(card);
            }
        }

        $("#chat-message-submit").on("click", function () {
            var messageInputDOM = $("#chat-message-input");
            var value = messageInputDOM.val();

            ws.send(JSON.stringify({
                "text": value,
                "from": "{{ .user.Username }}"
            }));

            messageInputDOM.val("");
            messageInputDOM.focus();
        })
    </script>
